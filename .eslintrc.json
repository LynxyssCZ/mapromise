{
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"impliedStrict": true,
			"promises": true
		},
		"sourceType": "module"
	},
	"rules": {
		"indent": [ 2, "tab" ],
		"quotes": [ 2, "single" ],
		"linebreak-style": [ 2, "unix" ],
		"semi": [ 2, "always" ],
		"no-console": [ 1 ],
		"indent": [ 2, "tab", {
			"SwitchCase": 1
		}]
	},
	"env": {
		"node": true,
		"mocha": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"plugins": []
}
